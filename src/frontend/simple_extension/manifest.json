{
  "manifest_version": 3,
  "name": "Simple Extension",
  "version": "1.0",
  "description": "A simple cross-browser extension example.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple Extension"
  },
  "permissions": ["storage"]
}

